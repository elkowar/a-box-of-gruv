/* ==UserStyle==
@name           idris-lang documentation
@namespace      github.com/openstyles/stylus
@version        1.0.0
@description    gruvboxed duckduckgo
@author         ElKowar
@preprocessor   stylus
==/UserStyle== */
@-moz-document url-prefix("https://www.idris-lang.org/docs/idris2/") {
    :root {
        --elk-font-family: ${elk_font_family};
        --elk-font-size: ${elk_font_size};
        
        --elk-bg-dark: ${elk_bg_dark};
        --elk-bg-darkisher: ${elk_bg_darkisher};
        --elk-bg-darkish: ${elk_bg_darkish};
        --elk-bg-normal: ${elk_bg_normal};
        --elk-bg-brighter: ${elk_bg_brighter};
        
        --elk-border: ${elk_border};
        
        --elk-fg-normal: ${elk_fg_normal};
        --elk-fg-brighter: ${elk_fg_brighter};
        --elk-fg-darker: ${elk_fg_darker};
        --elk-fg-dark: ${elk_fg_dark};
        --elk-fg-inactive: ${elk_fg_inactive};
        
        --elk-red: ${elk_red};
        --elk-purple: ${elk_purple};
        --elk-blue: ${elk_blue};
        --elk-green: ${elk_green};
        --elk-aqua: ${elk_aqua};
        --elk-yellow: ${elk_yellow};
        --elk-orange: ${elk_orange};
        
        --elk-accent: ${elk_accent};
    }
    * {
        border-color: var(--elk-fg-normal) !important;
    }

    ul.names {
        border: none !important;
        & > li {
            background-color: unset !important;
        }
    }

    html,
    body,
    .container,
    footer,
    header {
        background: var(--elk-bg-normal) !important;
        color: var(--elk-fg-normal);
        border-bottom: none;

        & > dl {
            & > br {
                display: none;
            }
            dt {
                background: var(--elk-bg-dark) !important;
                border: none !important;

                .name {
                    color: var(--elk-aqua);
                }
                .type {
                    color: var(--elk-blue);
                    margin-right: 0.5ch !important;
                }

                span {
                    display: inline !important;
                }
            }
            & > dt {
                padding: 10px !important;
                padding-left: 20px !important;
                border-bottom: 1px solid var(--elk-border) !important;
            }
            dd {
                padding: 10px;
                padding-left: 20px !important;
                font-size: unset !important;
                background: var(--elk-bg-dark);
                margin: 0 !important;
                margin-bottom: 20px !important;
            }
        }
    }
}
