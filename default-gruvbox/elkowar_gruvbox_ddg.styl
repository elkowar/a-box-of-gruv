/* ==UserStyle==
@name           duckduckgo-gruvbox-elkowar
@namespace      github.com/openstyles/stylus
@version        1.0.0
@description    gruvboxed duckduckgo
@author         ElKowar
@preprocessor   stylus
==/UserStyle== */
@-moz-document domain("duckduckgo.com") {
    :root {
        --elk-font-family: "Terminus (TTF)";
        --elk-font-size: 16px;
        
        --elk-bg-dark: #1d2021;
        --elk-bg-darkisher: #202020;
        --elk-bg-darkish: #222222;
        --elk-bg-normal: #282828;
        --elk-bg-brighter: #504945;
        
        --elk-border: #353331;
        
        --elk-fg-normal: #ebdbb2;
        --elk-fg-brighter: #fbf1c7;
        --elk-fg-darker: #d5c4a1;
        --elk-fg-dark: #a89984;
        --elk-fg-inactive: #696969;
        
        --elk-red: #fb4934;
        --elk-purple: #b16286;
        --elk-blue: #458588;
        --elk-green: #b8bb26;
        --elk-aqua: #83c07c;
        --elk-yellow: #fabd2f;
        --elk-orange: #fe8019;
        
        --elk-accent: var(--elk-aqua);
    }

    body {
        background-color: var(--elk-bg-normal);
    }

    *,
    div[class*="result"],
    .result__snippet b,
    .result__date {
        color: var(--elk-fg-normal) !important;
        font-family: "xos4 terminus" !important;
        font-size: 1rem;
    }


    #duckbar a.zcm__link {
        border-bottom-color: var(--elk-fg-normal) !important;
        padding: 0 10px;
        margin: 0 0;
        transition: background-color 0.1s ease-in-out;
        &:hover {
            background-color: var(--elk-bg-dark);
        }
    }

    .switch {
        background-color: var(--elk-bg-brighter);
    }

    .zci,
    .tile-wrap,
    .metabar,
    .zci-wrap {
        background-color: var(--elk-bg-normal) !important;
        border: none !important;
    }

    .tile {
        background-color: var(--elk-bg-normal);
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
        border: none !important;
        transition: box-shadow 0.1s ease-in-out;
        &.highlight {
            box-shadow: 0 0 15px 0 rgba(0, 0, 0, 0.8) !important;
        }
    }


    .footer {
        background-color: var(--elk-bg-normal);
        display: none !important;
        .footer__card {
            background-color: var(--elk-bg-dark) !important;
            border: none;
        }
    }

    .btn.feedback-btn,
    .feedback-prompt,
    .header__clickable[data-type="showcase"],
    .header__label.social {
        display: none;
    }

    .modal__box,
    .modal__header {
        background: var(--elk-bg-normal) !important;
        & > * {
            background: var(--elk-bg-normal) !important;
        }
    }




    pre.prettyprint,
    code {
        background-color: var(--elk-bg-dark);
    }

    .module__toggle--more::after {
        background: linear-gradient(var(--elk-bg-normal), var(--elk-bg-dark)) !important;
    }

    .modal__list__link.is-highlighted {
        background-color: var(--elk-bg-brighter) !important;
    }

    .module__clickable-header > * {
        color: var(--elk-fg-normal) !important;
    }

    .btn.btn--full {
        background-color: var(--elk-bg-dark);
        border: none;
    }

    .switch__knob {
        background-color: var(--elk-fg-normal) !important;
    }



    .site-wrapper {
        box-shadow: none;
        background-color: var(--elk-bg-normal) !important;

        .header-wrap {
            background-color: var(--elk-bg-normal);
        }
    }



    .header__logo {
        filter: sepia(80%);
    }

    form#search_form {
        background-color: var(--elk-bg-darkisher) !important;
        box-shadow: 2px 2px 3px 0 rgba(0, 0, 0, 0.3);
        border: none;
        transition: box-shadow 0.1s ease-in-out;
    }

    div.result {
        transition: box-shadow 0.1s ease-in-out;
        border: none;
        &.highlight {
            box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.3) !important;
            border-radius: 5px;
            border: none !important;
        }

        a.result__url > * {
            color: var(----elk-blue) !important;
            font-family: "cozette" !important;
        }

        a.result__a {
            font-size: 1.2rem !important;
            font-family: "xos4 terminus" !important;
        }
        .result__snippet {
            font-size: 1rem;
            color: var(--fg2) !important;
        }
        img.result__icon__img {
            filter: sepia(60%) contrast(130%);
        }
    }

    .msg--spelling :link,
    .msg--spelling :visited,
    .msg--spelling a:hover,
    .msg__clear,
    .msg__clear:hover,
    .msg__all,
    .msg__all:visited {
        color: var(--elk-fg-normal) !important;
    }
    
    .dropdown.dropdown--region {
        display: none !important;
    }

    #search_form {
        input {
            z-index: 10 !important;
            background-color: var(--elk-bg-darkisher) !important;
            &[type="submit"],
            &[type="button"] {
                background-color: rgba(0, 0, 0, 0) !important;
            }
        }
        &.search--focus,
        &.search--hover {
            box-shadow: 4px 4px 8px 0px rgba(0, 0, 0, 0.3);
        }
        &.search--focus,
        &.search--hover #search_button {
            background-color: var(--elk-bg-darkisher);
        }
    }


    .search__autocomplete {
        transform: translateY(15px);
        z-index: 5 !important;
        border: none;
        padding-right: 2px;
        background-color: var(--elk-bg-darkisher);
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.5);
        & > * {
            background-color: var(--elk-bg-darkisher);
            &.t-normal {
                color: var(--elk-fg-darker) !important;
            }
            &:not(.t-normal) {
                font-weight: normal !important;
                color: var(--elk-fg-normal) !important;
            }
        }
    }

    .search-filters-wrap::after,
    .search-filters-wrap::before,
    .metabar__dropdowns-wrap::before,
    .metabar__dropdowns-wrap::after {
        display: none;
    }
}
